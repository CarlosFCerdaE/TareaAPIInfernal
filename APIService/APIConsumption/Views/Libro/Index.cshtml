
@{
    ViewBag.Title = "Libros";
}

<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="br-section-wrapper">

    <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

    <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
        <thead class="thead-colored thead-primary">
            <tr>
                <th>ISBN Libro</th>
                <th>Nombre</th>
                <th>Editorial</th>
                <th>Autor</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div id="modal-record" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 400px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Direcciones AW</h3>
            </div>
            <div class="modal-body">
                <form id="NewRecord" role="form">
                    <div>
                        <div class="form-group">
                            <label for="txtIsbnLibro" class="control-label">ISBN del Libro</label>
                            <input type="text" id="txtIsbnLibro" class="form-control" placeholder="CIF del Libro" />
                        </div>
                        <div class="form-group">
                            <label for="txtNombreLibro" class="control-label">Nombre</label>
                            <input type="text" id="txtNombreLibro" class="form-control" placeholder="Nombre del Libro" />
                        </div>
                        <div class="form-group">
                            <label for="txtEditorialLibro" class="control-label">Editorial</label>
                            <input type="text" id="txtEditorialLibro" class="form-control" placeholder="Editorial del Libro" />
                        </div>
                        <div class="form-group">
                            <label for="txtAutorLibro" class="control-label">Autor</label>
                            <input type="text" id="txtAutorLibro" class="form-control" placeholder="Autor del Libro" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                        <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Libro.js"></script>