
@{
    ViewBag.Title = "Carros";
}

<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="br-section-wrapper">

    <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

    <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
        <thead class="thead-colored thead-primary">
            <tr>
                <th>PLACA Carro</th>
                <th>Color</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div id="modal-record" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 400px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Direcciones AW</h3>
            </div>
            <div class="modal-body">
                <form id="NewRecord" role="form">
                    <div>
                        <div class="form-group">
                            <label for="txtPlacaCarro" class="control-label">Placa Carro</label>
                            <input type="text" id="txtPlacaCarro" class="form-control" placeholder="Placa del Carro" />
                        </div>
                        <div class="form-group">
                            <label for="txtColorCarro" class="control-label">Color</label>
                            <input type="text" id="txtColorCarro" class="form-control" placeholder="Color del Carro" />
                        </div>
                        <div class="form-group">
                            <label for="txtMarcaCarro" class="control-label">Marca</label>
                            <input type="text" id="txtMarcaCarro" class="form-control" placeholder="Marca del Carro" />
                        </div>
                        <div class="form-group">
                            <label for="txtModeloCarro" class="control-label">Modelo</label>
                            <input type="text" id="txtModeloCarro" class="form-control" placeholder="Modelo del Carro" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                        <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Carro.js"></script>